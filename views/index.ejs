<body style="background-image: linear-gradient(120deg, #252322 0%, #42352b 50%, #524b33 100%);">

    <!-- <canvas class="background"></canvas> -->
    <div class="container-sm">
        <nav class="navbar  fixed-top navbar-expand-lg navbar-light"
            style="background-image: linear-gradient(120deg, #252322 0%, #42352b 50%, #524b33 100%); color: white;">

            <a class="navbar-brand font-weight-bold href=" index.html">
                <img class="img-icon" src="/img/1.png">
                MR.COCO</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav ml-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="#" style="color: white">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#" style="color: white">products</a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link" href="#" style="color: white">Contact</a>
                    </li>
                    <li class="nav-item">
                        <% if(name){ %>
                        <a class="nav-link" href="#" style="color: white"><%= name %></a>
                        <% }else{ %>

                        <a class="nav-link" href="/login" style="color: white">Login</a>
                        <% } %>
                    </li>
                </ul>
            </div>
        </nav>
    </div>
    <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel" data-interval="1950">

        <div class="carousel-inner">
            <div class="carousel-item active">
                <img src="/img/ca.jpg" class="d-block w-100" alt="...">
            </div>
            <div class="carousel-item">
                <img src="/img/cb.jpg" class="d-block w-100" alt="...">
            </div>
            <div class="carousel-item">
                <img src="/img/cc.jpg" class="d-block w-100" alt="...">
            </div>
        </div>

    </div>

    <div class="main">

        <h1 class="text-center" style="color: white;">
        </h1>
        <div class="container">
            <div class="row">
                <% items.forEach(pro => { %>
                <div class="col-sm-12 col-md-4">
                    <div class="card">
                        <img class="card-img-top w-100" src="<%= pro.img %>">
                        <div class="card-body text-center">
                            <i class="fas fa-chalkboard-teacher"></i>
                            <h4 class="display-5"><%= pro.item %></h4>
                            <button type="button" class="btn" style="background-color:#ff2400">Order now</button>
                        </div>
                    </div>
                </div>
                <% }) %>


            </div>

        </div>
    </div>



